
 <%= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?sensor=false' %>
<%= javascript_include_tag 'gmap3' %>
<%= javascript_include_tag 'jquery-autocomplete' %>
<%= stylesheet_link_tag    "jquery-autocomplete.css", media: "all"%>
<script>
  $(function(){
            
            $("#test").gmap3({
     <% unless @publicacion.latitude.nil? %>         
     marker:{
    latLng: [<%= @publicacion.latitude %>, <%= @publicacion.longitude %>]
  },
  <% else %>
   marker:{
    latLng: [-33.442909, -70.653870]
  },
  <% end %>
    map:{
      <% if @publicacion.latitude.nil? %>
      latLng: [-33.437844, -70.650480],
      <% else %>
      latLng: [<%= @publicacion.latitude %>, <%= @publicacion.longitude %>],
      <% end %>
      options:{
        zoom:14,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        mapTypeControl: true,
        mapTypeControlOptions: {
          style: google.maps.MapTypeControlStyle.DROPDOWN_MENU
        },
        navigationControl: true,
        scrollwheel: true,
        streetViewControl: true
      }
    }
  });
            
            $("#address").autocomplete({
                source: function() {
                    $("#test").gmap3({
                        getaddress: {
                            address: $(this).val(),
                            callback: function(results){
                                if (!results) return;
                                $("#address").autocomplete("display", results, false);
                            }
                        }
                    });
                },
                cb:{
                    cast: function(item){
                        return item.formatted_address;
                    },
                    select: function(item) {
                        $("#test").gmap3({
                            clear: "marker",
                            marker: {
                                latLng: item.geometry.location,
                                options: {
                                  icon: "http://maps.google.com/mapfiles/marker_green.png"
                                }
                            },
                            map:{
                                options: {
                                    center: item.geometry.location,
                                },
                                   events:{
      mousemove: function($this){
       $('#gmaps-output-latitude').html(item.geometry.location.lat());
  $('#gmaps-output-latitudes').val(item.geometry.location.lat());
   $('#gmaps-output-longitude').html(item.geometry.location.lng());
  $('#gmaps-output-longitudes').val(item.geometry.location.lng());
      }
    }
                            }

                        });
                    }
                }
            })
            .focus();
        });
</script>



